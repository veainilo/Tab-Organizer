{
  "manifest_version": 3,
  "name": "Edge Tab Organizer",
  "version": "1.0",
  "description": "Automatically organize tabs using Edge's built-in tab management features",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "windows"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
